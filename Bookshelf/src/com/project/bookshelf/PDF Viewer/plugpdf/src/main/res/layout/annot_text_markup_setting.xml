<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B4848484"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/annot_line_color_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_color"
        android:textColor="#FF2E2E2E"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/annot_line_color_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/annot_line_colors" />

    <CheckBox
        android:id="@+id/annot_line_squiggly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_squiggly"
        android:textColor="#FF2E2E2E" />

</LinearLayout>